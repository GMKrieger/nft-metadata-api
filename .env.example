# Application
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nft_metadata
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nft_metadata

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# RPC Endpoints
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
STARKNET_RPC_URL=https://starknet-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# IPFS / Pinata
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret
PINATA_JWT=your_pinata_jwt_token

# API Security
API_KEY_SALT=your_random_secret_salt_for_api_key_hashing

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_DAY=1000
